{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
  	"reviewers": ["Swaggeroo"],
	"extends": [
		"config:recommended"
	],
	"packageRules": [
	    {
	      "matchUpdateTypes": [
	        "patch",
	        "minor"
	      ],
		  "matchCurrentVersion": ">=1.0.0",
	      "automerge": true
	    },
		{
	      "matchUpdateTypes": [
	        "minor"
	      ],
	      "automerge": true
	    }
	]
}
